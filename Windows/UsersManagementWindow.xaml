<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="equipment_accounting_system.Windows.UsersManagementWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Управление пользователями">
    
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="Управление пользователями"
            FontSize="20"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"/>

        <!-- Список пользователей -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовки таблицы -->
            <Grid Grid.Row="0" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="10,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Имя пользователя" FontWeight="SemiBold"/>
                <TextBlock Grid.Column="1" Text="Роль" FontWeight="SemiBold"/>
                <TextBlock Grid.Column="2" Text="Действия" FontWeight="SemiBold"/>
            </Grid>

            <!-- Список пользователей -->
            <ListView x:Name="UsersListView"
                      Grid.Row="1"
                      SelectionMode="Single"
                      SelectionChanged="UsersListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10,8" BorderBrush="{ThemeResource SystemControlBackgroundBaseMediumBrush}" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Username}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding RoleText}" VerticalAlignment="Center"/>
                            <Button Grid.Column="2" 
                                    Content="Удалить"
                                    Click="DeleteUserButton_Click"
                                    Tag="{Binding Username}"
                                    FontSize="11"
                                    Padding="5,2"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button 
                x:Name="AddUserButton"
                Content="Добавить пользователя"
                Click="AddUserButton_Click"
                Margin="0,0,10,0"
                Style="{ThemeResource AccentButtonStyle}"/>

            <Button 
                x:Name="CloseButton"
                Content="Закрыть"
                Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

