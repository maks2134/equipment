<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="equipment_accounting_system.Windows.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Авторизация">
    
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="Система учета оборудования"
            FontSize="20"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Имя пользователя:" FontSize="14"/>
            <TextBox x:Name="UsernameTextBox" 
                     PlaceholderText="Введите имя пользователя"
                     FontSize="14"
                     Margin="0,5,0,15"/>

            <TextBlock Text="Пароль:" FontSize="14"/>
            <PasswordBox x:Name="PasswordBox" 
                         PlaceholderText="Введите пароль"
                         FontSize="14"
                         Margin="0,5,0,0"/>
        </StackPanel>

        <TextBlock 
            x:Name="ErrorTextBlock"
            Grid.Row="2"
            Foreground="Red"
            TextWrapping="Wrap"
            Margin="0,10,0,0"
            Visibility="Collapsed"/>

        <Button 
            x:Name="LoginButton"
            Grid.Row="3"
            Content="Войти"
            Click="LoginButton_Click"
            HorizontalAlignment="Stretch"
            Margin="0,20,0,0"
            FontSize="14"/>

        <Button 
            x:Name="RegisterButton"
            Grid.Row="4"
            Content="Регистрация"
            Click="RegisterButton_Click"
            HorizontalAlignment="Center"
            Margin="0,10,0,0"
            FontSize="12"/>

        <TextBlock 
            Grid.Row="5"
            Text="По умолчанию: admin/admin или user/user"
            FontSize="11"
            Foreground="Gray"
            HorizontalAlignment="Center"
            Margin="0,10,0,0"/>
    </Grid>
</Window>

