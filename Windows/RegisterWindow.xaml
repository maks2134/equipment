<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="equipment_accounting_system.Windows.RegisterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Регистрация нового пользователя">
    
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="Регистрация нового пользователя"
            FontSize="20"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Имя пользователя:" FontSize="14"/>
            <TextBox x:Name="UsernameTextBox" 
                     PlaceholderText="Введите имя пользователя"
                     FontSize="14"
                     Margin="0,5,0,15"/>

            <TextBlock Text="Пароль:" FontSize="14"/>
            <PasswordBox x:Name="PasswordBox" 
                         PlaceholderText="Введите пароль"
                         FontSize="14"
                         Margin="0,5,0,15"/>

            <TextBlock Text="Подтверждение пароля:" FontSize="14"/>
            <PasswordBox x:Name="ConfirmPasswordBox" 
                         PlaceholderText="Подтвердите пароль"
                         FontSize="14"
                         Margin="0,5,0,15"/>

            <TextBlock Text="Роль:" FontSize="14"/>
            <ComboBox x:Name="RoleComboBox" 
                      FontSize="14"
                      Margin="0,5,0,15">
                <ComboBoxItem Content="Пользователь" Tag="User"/>
                <ComboBoxItem Content="Администратор" Tag="Administrator"/>
            </ComboBox>
        </StackPanel>

        <TextBlock 
            x:Name="ErrorTextBlock"
            Grid.Row="2"
            Foreground="Red"
            TextWrapping="Wrap"
            Margin="0,10,0,0"
            Visibility="Collapsed"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button 
                x:Name="RegisterButton"
                Content="Зарегистрировать"
                Click="RegisterButton_Click"
                Margin="0,0,10,0"
                FontSize="14"
                Style="{ThemeResource AccentButtonStyle}"/>

            <Button 
                x:Name="CancelButton"
                Content="Отмена"
                Click="CancelButton_Click"
                FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>

